{
    "manifest_version": 3,
    "name": "EveryPost for Chrome",
    "description": "An extension for EveryPost (https://everypost.in) to save bookmarks and view related links.",
    "version": "0.0.1",
    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://everypost.in/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/chrome/background.ts",
        "type": "module"
    },
    "action": {
        "default_popup": "src/entry/logged_out.html"
    },
    "icons": {
        "32": "logo_32.png",
        "128": "logo_128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "MacCtrl+Shift+M"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://everypost.in/*"
            ],
            "js": [
                "src/chrome/content_everypost.ts"
            ]
        }
    ]
}
