{
    "manifest_version": 3,
    "name": "EveryPost Extension",
    "description": "Bookmarks for the modern web.",
    "version": "0.0.1",
    "permissions": [
        "tabs",
        "notifications",
        "cookies",
        "storage",
        "alarms",
        "webNavigation"
    ],
    "host_permissions": [
        "https://everypost.in/*",
        "http://localhost:3000/*"
    ],
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "main.html"
    },
    "icons": {
        "128": "icon_128.png"
    },
    "commands": {
        "extract-links": {
            "suggested_key": {
                "default": "Ctrl+M",
                "mac": "MacCtrl+M"
            },
            "description": "Save bookmark"
        },
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+M",
                "mac": "MacCtrl+Shift+M"
            }
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://everypost.in/*"
            ],
            "js": [
                "/content_everypost.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "https://everypost.in/*"
            ],
            "js": [
                "/content.js"
            ]
        }
    ]
}